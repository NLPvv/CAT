{
    "specaug": {
        "freq_mask_width_range": 0.35,
        "num_freq_mask": 2,
        "num_time_mask": 10,
        "time_mask_width_range": 0.05
    },
    "encoder": {
        "type": "ConformerNet",
        "kwargs": {
            "num_cells": 14,
            "idim": 80,
            "hdim": 512,
            "conv": "vgg2l",
            "num_heads": 4,
            "kernel_size": 15,
            "num_classes": 500
        }
    },
    "scheduler": {
        "type": "SchedulerEarlyStop",
        "kwargs": {
            "min_step": 140,
            "n_tol": 20,
            "gamma": 0.5
        },
        "optimizer": {
            "type": "Adam",
            "kwargs": {
                "lr": 3e-05,
                "betas": [
                    0.9,
                    0.98
                ],
                "weight_decay": 1e-06
            }
        }
    }
}